<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical" >

        <SeekBar
            android:visibility="gone"
            android:id="@+id/seekBarLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="2dip"
            android:minHeight="2dip"
            android:progressDrawable="@drawable/fyjp_seekbar_drawable2"
            android:thumb="@null" />

        <SeekBar
            android:visibility="gone"
            android:id="@+id/seekBarRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="2dip"
            android:minHeight="2dip"
            android:progressDrawable="@drawable/fyjp_seekbar_drawable"
            android:thumb="@null" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:textColor="@color/red"
        android:textSize="@dimen/level_3"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvStayLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/stay_landscape"
        android:textColor="@color/text_color1"
        android:textSize="@dimen/level_3" />

    <RelativeLayout
        android:id="@+id/reLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/translucent"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/ivSwitcherLand"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:src="@drawable/fyjp_icon_switcher" />

        <GridView
            android:id="@+id/gridViewLand"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerInParent="true"
            android:cacheColorHint="@color/transparent"
            android:fadingEdge="none"
            android:horizontalSpacing="1dip"
            android:numColumns="3"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dip"
            android:visibility="invisible" />

        <!-- llGrid为了遮挡gridview的点击事件 -->

        <LinearLayout
            android:id="@+id/llGridLand"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:clickable="true"
            android:orientation="vertical" >
        </LinearLayout>

        <ImageView
            android:id="@+id/ivFlash"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fyjp_icon_flash_off" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/translucent"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/ivDoneLand"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dip"
            android:src="@drawable/fyjp_icon_live_done"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivStartLand"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dip"
            android:background="@drawable/fyjp_icon_start" />

        <ImageView
            android:id="@+id/ivChangeLand"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:src="@drawable/fyjp_icon_paizhao" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/reToUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black" />

        <RelativeLayout
            android:id="@+id/reToDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black" />
    </LinearLayout>

</RelativeLayout>